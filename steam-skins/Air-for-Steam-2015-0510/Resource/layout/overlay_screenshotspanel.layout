"resource/layout/overlay_screenshotspanel.layout"
{
	styles
	{
		detailsbox {
			bgcolor=AL10
		}

		button {
			minimum-height=0 //reset for button height
			padding-right=1 padding-left=3
			font-family=condensed
			font-size=30
			font-weight=700
			textcolor=Focus
			font-style=uppercase
			render_bg { }
		}

		button:hover {
			textcolor=Focus2
		}
	}

	layout
	{
		place { control=ViewScreenshots height=60 align=top-center margin-right=30 }

		place { control="TitleText,InstructionText,DarkRegion,SS0,SS1,SS2,SetShortcut" height=0 width=0 }
	}
}
