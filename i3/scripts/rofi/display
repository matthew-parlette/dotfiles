#!/bin/bash
dpath=/home/matt/.i3/scripts/display
displays=$(ls -t "$dpath")

if [ -z $@ ]
then
  # Generate list of display profiles
  echo "$displays"
else
  display=$@
  "$dpath/$display"
  notify-send "Display Profile" "Using display profile '$display'"
fi

