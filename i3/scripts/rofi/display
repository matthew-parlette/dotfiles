#!/bin/bash
dpath=/home/matt/.i3/scripts/display
displays=$(ls -t "$dpath")

handle_selection() {
  if [[ $1 ]]; then
    display=$1
    "$dpath/$display"
    notify-send "Display Profile" "Using display profile '$display'"
  fi
}

handle_selection "$( echo "$displays" | rofi -dmenu -i -p 'Display Profile â†  ' -hlbg '#5FA5D7' -bc '#5FA5D7' )"
