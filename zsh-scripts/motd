#!/bin/bash

COLUMNS=$(tput cols)
# echo $COLUMNS
padding="$((($COLUMNS-80)/2))"

# Center text in terminal
# $1 text
center () {
  for i in $(seq 1 $padding); do echo -n ' '; done
  echo "$1"
  # padding=$(((80+$COLUMNS)/2))
  # printf "%*s\n" "$padding" "$1"
  # printf "%*s\n" 10 "$1"
}

